{
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"lib": [
			"ES2015"
		],
		"module": "commonjs",
		"newLine": "lf",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": ".",
		"preserveConstEnums": true,
		"removeComments": true,
		"strict": true,
		"target": "es5"
	},
	"compileOnSave": true,
	"include": [
		"src/**/*",
		"types/*.d.ts"
	],
	"exclude": [
		"node_modules/"
	]
}
